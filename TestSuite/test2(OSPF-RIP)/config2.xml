<?xml version="1.0" encoding="utf-8"?>
<config>
    <equipments>
    	<equipment>
        	<equip-id>1</equip-id>
        	<config-info>
            	<loopback>2.2.2.2</loopback>
            	<ports-conf>
                	<port>
                    	<port-number>s0/0/0</port-number>
                    	<port-ip>192.168.1.1</port-ip>
                    	<port-mask>255.255.255.0</port-mask>
                    	<clock-rate>9600</clock-rate>
                	</port>
            	</ports-conf>
            	<confs>
            	<conf>
            		<protocol>ospf</protocol>
            		<commands>
            			<command>ospf 1</command>
            			<command>setnetwork 192.168.1.0 255.255.255.0 0</command>
            		</commands>
            	</conf>
            	</confs>
        	</config-info>
    	</equipment>
    	<equipment>
        	<equip-id>2</equip-id>
        	<config-info>
            	<loopback>3.3.3.3</loopback>
            	<ports-conf>
                	<port>
                    	<port-number>s0/0/0</port-number>
                    	<port-ip>192.168.1.2</port-ip>
                    	<port-mask>255.255.255.0</port-mask>
                    	<clock-rate>9600</clock-rate>
                	</port>
                	<port>
                    	<port-number>s0/0/1</port-number>
                    	<port-ip>192.168.2.1</port-ip>
                    	<port-mask>255.255.255.0</port-mask>
                    	<clock-rate>9600</clock-rate>
                	</port>
            	</ports-conf>
            	<confs>
            	 <conf>
            		<protocol>ospf-rip</protocol>
            		<commands>
            			<command>ospf 1</command>
            			<command>setOspfNetwork 192.168.1.0 255.255.255.0 0</command>
            			<command>redistributeRipToOspf</command> 
            			<command>exit</command>
            			<command>rip</command>
            			<command>ver 2</command>
            			<command>setRipNetwork 192.168.2.0 </command>
            			<command>redistributeOspfToRip 1 10</command> 
            		</commands>
            	 </conf>	 
            	</confs>
        	</config-info>
    	</equipment>
    	<equipment>
        	<equip-id>3</equip-id>
        	<config-info>
            	<loopback>4.4.4.4</loopback>
            	<ports-conf>
                	<port>
                    	<port-number>s0/0/1</port-number>
                    	<port-ip>192.168.2.2</port-ip>
                    	<port-mask>255.255.255.0</port-mask>
                    	<clock-rate>9600</clock-rate>
                	</port>
            	</ports-conf>
            	<confs>
            	<conf>
            		<protocol>rip</protocol>
            		<commands>
            			<command>rip</command>
            			<command>ver 2</command>
            			<command>setRipNetwork 192.168.2.0 </command>
            		</commands>
            	</conf>
            	</confs>
        	</config-info>
    	</equipment>
    </equipments>
    <tests>
        <test id="1">
        	<equip-id>1</equip-id>
        	<commands>
    			<command>VerifyIpRoute</command>
    		</commands>
    		<expects>
    		<expect>C    192.168.1.0/24 is directly connected, Serial0/0/0</expect>
    		</expects>
        </test>
        <test id="2">
        	<equip-id>2</equip-id>
        	<commands>
            	<command>VerifyIpRoute</command>
            </commands>
            <expects>
            <expect>C    192.168.1.0/24 is directly connected, Serial0/0/0</expect>
            </expects>
        </test>
        <test id="3">
        	<equip-id>3</equip-id>
        	<commands>
            	<command>VerifyIpRoute</command>
            </commands>
            <expects>
            <expect>R    192.168.1.0/24 [120/15] via 192.168.2.1</expect>
            </expects>
        </test>
    </tests>
</config>
